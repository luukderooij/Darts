{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "uvicorn app.main:app --reload --port 8000",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      // Windows specific: auto-activate venv
      "windows": {
        "command": "..\\.venv\\Scripts\\Activate.ps1; uvicorn app.main:app --reload --port 8000"
      },
      "presentation": {
        "group": "server",
        "reveal": "always",
        "panel": "split"
      }
    },
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "group": "server",
        "reveal": "always",
        "panel": "split"
      }
    },
    {
      "label": "Dev: Run All",
      "dependsOn": ["Start Backend", "Start Frontend"],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "âš¡ Generate New Version",
      "type": "shell",
      "command": "npm run release",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "detail": "Analyzes commits, bumps version, and updates CHANGELOG"
    }
  ]
}