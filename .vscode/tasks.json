{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Backend",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell":{
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        },
      },
      "command": ".venv\\Scripts\\activate && cd backend && python -m uvicorn app.main:app --reload", 
      "presentation": {
        "group": "build",
        "reveal": "always",
        "panel": "dedicated"       
      }
    },
    {
      "label": "Start Frontend",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell":{
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        },
      },
      "command": "cd frontend && npm run dev",
      "isBackground": true,
      "presentation": {
        "group": "build",
        "reveal": "always",
        "panel": "dedicated"    
      }
    },
    { "label": "Start All",
    "dependsOn": ["Start Backend", "Start Frontend"],
    "group": {
      "kind": "build",
      "isDefault": true
      }
    }
  ]
}